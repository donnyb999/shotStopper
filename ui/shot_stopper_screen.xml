<?xml version="1.0" encoding="UTF-8"?>
<screen type="screen" name="screen_shot_stopper" width="360" height="360" bg_color="#000000" scrollable="false">
  <label type="label" name="ble_status_label" text="B" align="top_mid" y="10" font="montserrat_24" text_color="#808080"/>
  <label type="label" name="title_label" text="Target Weight (g)" align="top_mid" y="50" font="montserrat_24" text_color="#FFFFFF"/>
  <label type="label" name="weight_label" text="..." align="center" y="-30" font="montserrat_48" text_color="#FFFFFF"/>
  <label type="label" name="checkmark_label" text="OK" align="center" y="10" font="montserrat_24" text_color="#00FF00" hidden="true"/>
  <obj type="obj" name="preset_container" width="320" height="80" align="bottom_mid" y="-60" flex_flow="row" flex_align="space_evenly,center,center" remove_style="true">
    <btn type="btn" name="preset_btn_0" width="90" height="60" bg_color="#808080" clickable="true">
      <label type="label" name="preset_label_0" text="36 g" font="montserrat_24" text_color="#FFFFFF"/>
    </btn>
    <btn type="btn" name="preset_btn_1" width="90" height="60" bg_color="#808080" clickable="true">
      <label type="label" name="preset_label_1" text="40 g" font="montserrat_24" text_color="#FFFFFF"/>
    </btn>
    <btn type="btn" name="preset_btn_2" width="90" height="60" bg_color="#808080" clickable="true">
      <label type="label" name="preset_label_2" text="45 g" font="montserrat_24" text_color="#FFFFFF"/>
    </btn>
  </obj>
  <label type="label" name="battery_label" text="Batt: --%" align="bottom_mid" y="-20" font="montserrat_16" text_color="#FFFFFF"/>
</screen>

